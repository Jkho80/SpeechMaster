.practice-aim {
  padding: 20px;
  font-family: Arial, sans-serif;
  text-align: center;
}
.paragraph {
  margin-bottom: 20px;
  text-align: left;
}
.paragraph p {
  margin: 10px 0;
}
.response {
  display: block;
  color: #4caf50; /* Green for correct responses */
  font-size: 0.9em;
}
.recording-section {
  margin: 20px 0;
}
.frequency-bars {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 100px;
  margin-bottom: 10px;
}
.bar {
  width: 8px;
  margin: 0 2px;
  background-color: #4caf50; /* Green bars */
  transition: height 0.1s;
}
.record-button {
  padding: 10px 20px;
  font-size: 16px;
  color: white;
  background-color: #4caf50; /* Green button */
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}
.record-button.recording {
  background-color: #f44336; /* Red button when recording */
}
.score {
  margin-top: 20px;
  font-size: 1.2em;
  color: #4caf50; /* Green for score */
}
